################################
# installs basic support files #
# on each environment.         #
################################
files:
  "/usr/local/bin/tlog":
      mode: "000755"
      content : |
        #!/bin/bash

        sudo tail -100f /var/log/web.stdout.log

  "/usr/local/bin/go":
      mode: "000755"
      content : |
        #!/bin/bash

        sudo -s

        . /var/app/venv/staging-LQM1lest/bin/activate
        `cat /opt/elasticbeanstalk/deployment/env | awk '{print "export",$1}'`
        cd /var/app/current
