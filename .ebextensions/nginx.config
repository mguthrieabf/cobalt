###############################################################################
# Installs a new /etc/nginx/conf.d/elasticbeanstalk/00_application.conf file  #
# This is needed to stop Django being hit with attacks that trigger a         #
# warning that ALLOWED_HOSTS may need to be updated.                          #
#                                                                             #
# This overwrites an existing EB generated file which is not ideal but nginx  #
# only lets us have one definition for this so we have to share.              #
#                                                                             #
###############################################################################

commands:
  01_mount:
    command: "/tmp/didrun.sh"

files:
  "/etc/nginx/conf.d/elasticbeanstalk/00_application2.conf":
      mode: "000755"
      content : |
        location / {

        ##### Cobalt added if statement to reject things not from our domain or health checks
        ##### nginx if doesn't support complex statements so need a workaround

           set $test 0;

           if ( $host !~* ^.*.abftech.com.au$ ) {
              set $test 1;
           }

           if ( $uri ~* \/health ) {
              set $test 0;
           }

           if ( $test = 1 ) {
              return 444;
           }

            proxy_pass          http://127.0.0.1:8000;
            proxy_http_version  1.1;

            proxy_set_header    Connection          $connection_upgrade;
            proxy_set_header    Upgrade             $http_upgrade;
            proxy_set_header    Host                $host;
            proxy_set_header    X-Real-IP           $remote_addr;
            proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        }
